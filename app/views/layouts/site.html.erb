<!DOCTYPE html>
<html>

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>EscamboAPP</title>
      <%= stylesheet_link_tag    'application', media: 'all' %>
      <%= stylesheet_link_tag    'site', media: 'all' %>

      <%= csrf_meta_tags %>

  </head>

  <body>
  <div id="global-spin" class="loading hide" style="display: none;">Loading&#8230;</div>
  <%= render partial: "layouts/site_shared/navigation" %>
  
  
    <!-- Page Content -->
    <div class="container">
  
      <%= form_tag site_search_path, method: :get do  %>
        <div class="row" style='padding-top: 10px;'>
            <div class="col-lg-3"></div>
              <div class="col-lg-6">
                <div class="input-group">
                 
                    <%= text_field_tag(:q, params[:q], {class:"form-control", placeholder:"Pesquisar por..."}) %>

                  <span class="input-group-btn">
                       <%= submit_tag("Pesquisar", class:"btn btn-secondary") %>
                  </span>
                </div>
            </div>
        </div>
      <% end %>

      <div class="row">
        <%= render partial: 'site/shared/sidebar' %>
            <div id="home-detail" class="col-lg-9">
              
              <% if controller_path == 'site/home' %>
                    <%= render partial: 'site/shared/carousel' %>
              <% end %>
           <div class="row">
                <%= yield %>
            </div>
          <!-- /.row -->
        </div>
        <!-- /.col-lg-9 -->
      </div>
      <!-- /.row -->
    </div>

  <%= render partial: "layouts/site_shared/footer" %>
  
      <%= javascript_include_tag 'application'  %>
      <%= javascript_include_tag 'site' %>

  </body>

</html>

