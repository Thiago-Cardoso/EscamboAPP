<!DOCTYPE html>
<html>

  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>EscamboAPP</title>
      <%= stylesheet_link_tag    'application', media: 'all' %>
      <%= stylesheet_link_tag    'site', media: 'all' %>
      <%= stylesheet_link_tag    'site/profile', media: 'all' %>
      <%= javascript_include_tag 'application' %>
      <%= javascript_include_tag 'site' %>
      <%= javascript_include_tag 'site/profile' %>
      <%= csrf_meta_tags %>

  </head>

  <body>

  <%= render partial: "layouts/site_shared/navigation" %>

  <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li>
                    <%= link_to "Dashboard", site_profile_dashboard_index_path %>
                </li>
                <li>
                   <%= link_to "Meus anÃºncios", site_profile_ads_path %>
                </li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <%= yield %>
                              <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- Menu Toggle Script -->
    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    </script>

</body>

</html>

